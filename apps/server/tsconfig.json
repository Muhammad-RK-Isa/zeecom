{
  "extends": "@zeecom/tsconfig/base.json",
  "compilerOptions": {
    "module": "ESNext",
    "moduleDetection": "force",
    "allowImportingTsExtensions": true,
    "verbatimModuleSyntax": true,
    "noFallthroughCasesInSwitch": true,
    "noPropertyAccessFromIndexSignature": true,
    "paths": {
      "~/*": ["./src/*"]
    }
  },
}